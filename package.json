{
  "name": "steamer-react-component",
  "version": "2.0.0-beta.1",
  "description": "react component development starter kit",
  "main": "dist/index.js",
  "scripts": {
    "start": "node ./tools/script.js --mode=development",
    "dev": "node ./tools/script.js --mode=development",
    "source": "node ./tools/script.js --mode=source",
    "dist": "npm run babel",
    "test": "npm run jest",
    "babel": "babel src --out-dir dist --copy-files",
    "webpack": "node ./tools/script.js --mode=production",
    "jest": "jest --coverage",
    "karma": "cross-env BABEL_ENV=test node ./tools/script.js --mode=karma",
    "lint": "eslint src/**/*.js && stylelint src/**/*.less",
    "prepublish": "npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SteamerTeam/steamer-react-component.git"
  },
  "keywords": [
    "steamer",
    "react",
    "component",
    "starter kit",
    "boilerplate"
  ],
  "author": "SteamerTeam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SteamerTeam/steamer-react-component/issues"
  },
  "homepage": "https://github.com/SteamerTeam/steamer-react-component#readme",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-istanbul": "^0.12.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0-beta.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.0",
    "eslint": "^3.19.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-react": "^6.10.3",
    "express": "^4.15.2",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-res-webpack-plugin": "^2.0.0",
    "http-proxy-middleware": "^0.17.4",
    "jest": "^19.0.2",
    "jest-environment-jsdom": "^19.0.2",
    "jsdom": "^9.11.0",
    "karma": "^1.6.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.30",
    "karma-webpack": "^2.0.3",
    "less": "^2.7.2",
    "less-loader": "^4.0.2",
    "mocha": "^3.2.0",
    "mochawesome": "^2.0.4",
    "npm-install-webpack-plugin-steamer": "^4.0.4",
    "opn": "^4.0.2",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "preact": "^8.1.0",
    "react": "^15.5.0",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-test-renderer": "^15.5.4",
    "regenerator-runtime": "^0.10.3",
    "steamer-webpack-utils": "^1.0.1",
    "style-loader": "^0.16.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.3",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">=5.0.0"
  },
  "jest": {
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.jsx?$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(css|less|scss|sass|styl)$": "<rootDir>/test/mocks/styleMock.js"
    }
  }
}
